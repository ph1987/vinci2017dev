@model IEnumerable<vinci_novo.Models.partners>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="page page-tables-datatables">

    <div class="pageheader">

        @if (Request.QueryString["page"] == "conselho")
        {
            <h2>Conselho de administração <span>// GOVERNANÇA // EMPRESA</span></h2>
        }
        else if (Request.QueryString["page"] == "socios")
        {
            <h2>Membros <span>// SÓCIOS // EMPRESA</span></h2>
        }


    </div>

    <!-- row -->
    <div class="row">
        <!-- col -->
        <div class="col-md-12">

            <!-- tile editable usage -->
            <section class="tile">

                <!-- tile header -->
                <div class="tile-header dvd dvd-btm">
                    <h1 class="custom-font">@TempData["acao"]</h1>
                    <ul class="controls">
                        <li>
                            <a role="button" tabindex="0" href="@Url.RouteUrl(new { controller = "partners", action = "Create", page = Request.QueryString["page"] })"><i class="fa fa-plus mr-5"></i>Adicionar</a>
                        </li>
                    </ul>
                </div>
                <!-- /tile header -->
                <!-- tile body -->
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-custom" id="editable-usage">
                            <thead>
                                <tr class="odd gradeX">
                                    @if (Request.QueryString["page"] == "socios")
                                    {
                                        <th>Imagem</th>
                                    }
                                    <th>Nome</th>
                                    @if (Request.QueryString["page"] == "socios")
                                    {
                                        <th>Cargo</th>
                                    }
                                    <th>Texto</th>
                                    <th style="width: 50px; text-align: right; padding: 10px 0px 10px 0px;" class="no-sort">Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        @if (Request.QueryString["page"] == "socios")
                                        {
                                            <td><img src="@Url.Content("~/uploads/" + @item.img)" alt="#" class="size-30x30" style="background-color: #ccc;"></td>
                                        }
                                        <td>@item.txt1</td>
                                        @if (Request.QueryString["page"] == "socios")
                                        {
                                            <td>@item.txt2</td>
                                        }
                                        <td>@item.txt3</td>
                                        <td style="text-align: right; padding: 10px 0px 10px 0px;" class="actions">
                                            <a role="button" href="@Url.RouteUrl(new { controller = "partners", action = "Edit", id = @item.id, page = Request.QueryString["page"] })" tabindex="0" class="text-primary text-uppercase text-strong text-sm mr-10"><i class="fa fa-pencil"></i></a>
                                            <a role="button" href="@Url.RouteUrl(new { controller = "partners", action = "Delete", id = @item.id, page = Request.QueryString["page"] })" tabindex="0" class="text-danger text-uppercase text-strong text-sm mr-10"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /tile body -->

            </section>
            <!-- /tile -->

        </div>
        <!-- /col -->
    </div>
    <!-- /row -->

</div>

