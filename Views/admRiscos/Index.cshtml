                                    <tr class="odd gradeX">
                                        <td>@item.title</td>
                                        <td style="text-align: right; padding: 10px 0px 10px 0px;" class="actions">
                                        <a role="button" href="@Url.RouteUrl(new { controller = "admRiscos", action = "Edit", id = @item.id })" tabindex="0" class="text-primary text-uppercase text-strong text-sm mr-10"><i class="fa fa-pencil"></i></a>
