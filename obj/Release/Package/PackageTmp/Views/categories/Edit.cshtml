@model vinci_novo.Models.categories
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="page page-forms-wizard">

    <div class="pageheader">

        <h2>Editar <span>// <a href="noticias-categorias.html">CATEGORIAS</a> // NOTÍCIAS</span></h2>

    </div>

    <!-- page content -->
    <div class="pagecontent">
        @using (Html.BeginForm("Edit", "categories", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            <div class="form-container">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="categoria">Nome da Categoria: </label>
                        <input type="text" placeholder="campo com autocomplete" name="titulo" id="categoria" value="@Model.titulo" class="form-control">
                    </div>
                </div>
                <br>
                <br>
                <button type="submit" class="btn btn-cyan btn-ef btn-ef-5 btn-ef-5b mb-10">
                    <i class="fa fa-floppy-o"></i>
                    <span>Salvar</span>
                </button>
            </div>
        }
    </div>
    <!-- /page content -->
</div>
