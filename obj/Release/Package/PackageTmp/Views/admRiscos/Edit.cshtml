@model vinci_novo.Models.risks
@{
    ViewBag.Title = "riscos | Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<div class="page page-forms-wizard">

    <div class="pageheader">

        <h2>Editar Perfil de Risco <span>// <a href="perfis-de-risco.html">PERFIS DE RISCO</a></span></h2>

    </div>

    <!-- page content -->
    <div class="pagecontent">
        @using (Html.BeginForm("Edit", "admRiscos", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
        {
            <div class="form-container">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="nome">Nome do perfil: </label>
                        <input type="text" name="title" value="@Model.title" id="nome" class="form-control">
                    </div>
                </div>
                <br>
                <br>
                <button type="submit" class="btn btn-cyan btn-ef btn-ef-5 btn-ef-5b mb-10">
                    <i class="fa fa-floppy-o"></i>
                    <span>Salvar</span>
                </button>
            </div>
        }
    </div>
    <!-- /page content -->

</div>


