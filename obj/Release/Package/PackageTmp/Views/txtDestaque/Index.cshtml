@model vinci_novo.Models.txtdestaque
@{
    ViewBag.Title = "txtDestaque | Edit";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

@using (Html.BeginForm("Index", "txtDestaque", FormMethod.Post, new { @id = "theForm", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>texto destaque</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.titulo)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.titulo, new { @class = "medium-input" })
            @Html.ValidationMessageFor(model => model.titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.tituloen)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.tituloen, new { @class = "medium-input" })
            @Html.ValidationMessageFor(model => model.tituloen)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.link)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.link, new { @class = "medium-input" })
            @Html.ValidationMessageFor(model => model.link)
        </div>

        <div class="editor-field">
            @if (Model.ativo == 1)
            {
                <label>@Html.RadioButtonFor(model => model.ativo, 0)Não exibir no site</label>
                <label>@Html.RadioButtonFor(model => model.ativo, 1, new { @checked = "checked" })Exibir no site</label>
            }
            else
            {
                <label>@Html.RadioButtonFor(model => model.ativo, 0, new { @checked = "checked" })Não exibir no site</label>
                <label>@Html.RadioButtonFor(model => model.ativo, 1)Exibir no site</label>
            }
        </div>

        <input type="file" name="file" id="file" />
        @if (Model.imagem != null)
        {
            <br />
            <img src="@Url.Content("~/uploads/" + @Model.imagem)" />
            <br /><br />
            @*<a href="@Url.RouteUrl(new { controller = "sliders", action = "RemoveImg", id = @Model.id })">remover imagem</a>
                <br /><br />*@
        }

        <p>
            <input type="submit" value="Salvar" />
        </p>

    </fieldset>
}

